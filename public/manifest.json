{
  "name": "ChatGPT++",
  "description": "A chrome extension to enhance functionality of ChatGPT",
  "version": "0.1.12",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "ChatGPT++"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*"
      ],
      "js": [
        "./scripts/main.js"
      ]
    }
  ],
  "background": {
    "service_worker": "./scripts/background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "optional_permissions": [
    "cookies"
  ],
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  }
}
